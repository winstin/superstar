/* pages/credit/credit.wxss */

.card {
  width: 690rpx;
  height: 340rpx;
  padding: 30rpx;
}

.backgorud {
  width: 690rpx;
  height: 310rpx;
}

.card_info {
  height: 330rpx;
  width: 100%;
  background-color: #4984d9;
  border-radius: 3%;
}

.card_icon {
  width: 100rpx;
  height: 200rpx;
  margin-top: 90rpx;
  margin-left: 60rpx;
  float: left;
}

.card_info image {
  width: 75rpx;
  height: 75rpx;
  margin-top: 7rpx;
  border-radius: 50%;
}

.card_text {
  width: 500rpx;
  height: 200rpx;
  float: left;
  margin-top: 90rpx;
  color: #eee;
}

.bank_name {
  font-size: 36rpx;
}

.debit {
  margin-top: 5rpx;
  font-size: 26rpx;
}

.card_num {
  font-size: 40rpx;
  margin-top: 40rpx;
}

.info {
  width: 610rpx;
  margin-bottom: 10rpx;
}

.info_ {
  margin-top: 10rpx;
}

.info label {
  color: #4c83e0;
  font-size: 30rpx;
}

.info input {
  border-bottom: 1rpx rgba(230, 230, 230, 0.7) solid;
}

.button button {
  margin-top: 25rpx;
  width: 90%;
}

.edit {
  border: 1rpx solid #4a83da;
  color: #4a83da;
}

.del {
  background-color: #4a83da;
  border: 1rpx;
  color: #eee;
}

swiper{
  height: 330rpx;
}