}

.list_item {
  line-height: 100rpx;
  height: 100rpx;
  border-bottom: 1px solid rgba(243, 243, 243, 0.7);
}

.title {
  margin-left: 30rpx;
  float: left;
}

.num {
  margin-right: 10rpx;
  float: right;
