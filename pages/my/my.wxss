  background-color: #4984d9;
  text-align: center;
}

.headimg {
  width: 170rpx;
  height: 170rpx;
  border: 8rpx solid #85ade6;
  border-radius: 50%;
  margin-top: 55rpx;
}

.header view {
  margin-top: 20rpx;
}

.header text {
